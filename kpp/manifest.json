{
    "manifest_version": 2,
    "name": "Keep Playing Pandora",
    "version": "1.0",
    "description": "Keeps pandora playing.",
    "page_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.pandora.com/*",
          "http://www.pandora.com/*"
        ],
        "js": [
          "mutation-summary.js",
          "content_script.js"
        ]
      }
    ],

    "permissions" : [
        "tabs",
        "http://*/*"
            ]
}
